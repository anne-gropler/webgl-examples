mixin example(author, title, caption)
  doctype html
  html(lang = 'en')
    include partial/head.pug
    body.bg-light
  
  
      include partial/navbar.pug
  
      section.container
        header.jumbatron
          h1 #{title}
          p.lead #{caption}
  
      section.container
        - var id = 'example-canvas'
        include partial/canvas.pug

        p.text-right by #{author}, featuring #[a(href = 'https://github.com/cginternals/webgl-operate') webgl-operate].
